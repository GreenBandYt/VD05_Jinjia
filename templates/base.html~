<!-- Скрипт для обновления времени -->
<script>
    function updateTime() {
        const timeString = new Date().toLocaleTimeString();
        document.getElementById('current-time').innerText = timeString;
    }
    setInterval(updateTime, 1000);
    updateTime();
</script>

